<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_large"
    android:layout_marginStart="@dimen/margin_large"
    android:layout_marginTop="@dimen/margin_large"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_large">

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USA TODAY"
            android:textColor="@color/black"
            android:textSize="@dimen/text_source_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_source"
            android:layout_marginTop="@dimen/margin_median"
            android:layout_toStartOf="@+id/iv_news_photo"
            android:maxLines="4"
            android:text="At least three dead, 11 wounded in terror attack near famed Christmas market in France"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_news_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/margin_median"
            android:scaleType="centerCrop"
            android:src="@drawable/newspaper_loco" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_news_title"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Home : 9 hours"
            android:textColor="@color/black"
            android:textSize="@dimen/text_source_size" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/iv_news_photo"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_alignTop="@+id/tv_time"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>